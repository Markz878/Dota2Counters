<button @onclick=@Command class="m-2 self-center px-4 py-2 rounded font-bold text-white border-2 justify-self-center disabled:bg-gray-500 disabled:opacity-50 @Classes" disabled="@IsBusy">
    @if(!string.IsNullOrWhiteSpace(Icon))
    {
        <img class="inline w-6 mt-[-5px] mr-[3px] mb-[-2px] ml-[-10px]" src="icons/@Icon"/>
    }
    @Text
</button>


